
@{
    ViewBag.Title = "Index";
}

<h2>Crear reunion</h2>
<div class="row">
    <form id="frm">
        <div>
            Usuario:
            <input type="text" name="user" />
            Título de reunion:
            <input type="text" name="titulo_r" />
            Descripción de reunion:
            <input type="text" name="descripcion_r" />
            Fecha de reunion:
            <input type="date" id="fecha" name="fecha" value="2022-04-23" min="2018-01-01" max="2018-12-31">
            <input type="submit" class="btn btn-success" value="Entrar" />
        </div>
    </form>
</div>
@section scripts
{
    <script>
    $(document).ready(function () {
        $("#frm").submit(function (e) {
            e.preventDefault();
            URL="@Url.Content("~/CrearEvento/Grabar")";
            parametros = $(this).serialize();
            $.post(URL, parametros, function (data) {
                if (data == "1") {
                    alert("Bien");
                    //document.location.href = "@Url.Content("~/")"
                }else{
                    alert(data);
                }
            })
        })
    })
    </script>
}